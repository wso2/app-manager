<div class="asset-description">

    {{#with asset}}
        {{#attributes}}
            <div class="asset-description-header">
                <div class="row">
                    <div class="">
                        <div class="asset-banner">
                            <img class="img-store-mobile" src="{{#if images_banner}}{{images_banner}}{{/if}}">
                        </div>
                        <div class="asset-introduction-box">
                            <img src="{{#if images_thumbnail}}{{images_thumbnail}}{{/if}}">

                            <h3>{{overview_name}}</h3>
                            <small> {{t "Version"}} {{overview_version}}</small>
                            <small> {{t "by"}} {{overview_provider}} </small>
                            <img src="{{url "/extensions/assets/mobileapp/themes/store/img/"}}{{overview_platform}}.png" style="width: 30px;"/>
					<span class="asset-rating">
                        {{#if ../../user}}
                            <span class="user-rating" data-rating="{{../../rating.user}}">
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="1"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="2"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="3"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="4"/>
							<input class="auto-submit-star" name="star2" type="radio" class="star"
                                   value="5"/>
						</span>  <div class="rate-num-assert">({{../../rating.user}})</div>
                        {{else}}
                            <div class="asset-rating-{{../../rating.average}}star"></div>
                        {{/if}}

                    </span>
                           {{#if ../../config.enabled}}
                                {{>asset-utilization ../../../.}}
                           {{/if}}
                         </div>

                    </div>

                </div>

            </div>
            <div class="assetp-properties">

                <ul class="nav nav-tabs" id="assetp-tabs" data-aid="{{../path}}">
                    <li class="active">
                        <a href="#tab-properties" data-toggle="tab" data-type="basic">{{t "Description"}}</a>
                    </li>
                    <li>
                        <a href="#tab-changes" data-toggle="tab" data-type="basic">{{t "Recent Changes"}}</a>
                    </li>
                    <li style="display:none">
                        <a  href="#tab-reviews" data-toggle="tab" data-type="comments">{{t "User Reviews"}}</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-properties">
                        <div class="content">
                            {{>overview .}}
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-changes">
                        <div class="content">
                            {{overview_recentchanges}}
                        </div>
                    </div>


                </div>

            </div>
        {{/attributes}}
    {{/with}}
</div>
