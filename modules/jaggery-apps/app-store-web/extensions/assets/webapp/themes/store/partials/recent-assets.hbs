<div class="row">
    <div class="span3">
        <h4><i class="icon-time"></i> {{t "Recently Added"}}</h4>
        {{#slice . count="20" size="20"}}
        {{#each .}}
        <div class="row-fluid recently-added">
            {{#attributes}}
            <div class="span4 recent-asset-icon">
		<input type="hidden"  value="{{overview_allowAnonymous}}" id="allowAnonymous" name="allowAnonymous">
                <a href="{{url "/assets"}}/{{../type}}/{{../id}}"><img src="{{#if images_thumbnail}}{{images_thumbnail}}{{/if}}"></a>
            </div>
            <div class="span8 recent-asset-details">
		<input type="hidden"  value="{{overview_allowAnonymous}}" id="allowAnonymous" name="allowAnonymous">
                <strong><a href="{{url "/assets"}}/{{../type}}/{{../id}}">{{overview_displayName}}</a></strong>
                <small>by <a href="#">{{overview_provider}}</a></small>
                            <span class="star-rating">
                            	<div class="asset-rating">
                                    <div class="asset-rating-{{../rating.average}}star"></div>
                                </div>
                            </span>
            </div>
            {{/attributes}}
        </div>
        {{/each}}
        <hr/>
        {{/slice}}
    </div>
</div>
